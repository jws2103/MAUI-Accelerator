<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:ui="clr-namespace:MauiAccelerator.UI"
                    xmlns:font="clr-namespace:MauiAccelerator.UI.Font">
    <Style
        x:Key="DefaultEntryStyle"
        TargetType="Entry">
        <Setter
            Property="TextColor"
            Value="{x:Static ui:Colors.Grey3}" />
        <Setter
            Property="FontSize"
            Value="{x:Static font:FontSize.Normal}" />
        <Setter
            Property="FontFamily"
            Value="{x:Static font:FontFamily.OpenSansRegular}" />
        <Setter
            Property="PlaceholderColor"
            Value="{x:Static ui:Colors.Grey8}" />
    </Style>
</ResourceDictionary>