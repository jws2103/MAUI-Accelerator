<?xml version="1.0" encoding="utf-8"?>
<mopups:PopupPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    xmlns:ui="clr-namespace:MauiAccelerator.UI"
    xmlns:resources="clr-namespace:MauiAccelerator.Features.Common.Resources"
    CloseWhenBackgroundIsClicked="False"
    BackgroundColor="DimGray"
    Opacity="0.9"
    x:Class="MauiAccelerator.Features.Popups.Loading.Pages.LoadingPopup">
<Frame
    BackgroundColor="WhiteSmoke"
    CornerRadius="{x:Static ui:Dimensions.CornerRadiusXXL}"
    HeightRequest="100"
    WidthRequest="150">
    <VerticalStackLayout            
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <ActivityIndicator
            IsEnabled="True"
            IsRunning="True"
            IsVisible="True"/>
        <Label
            HorizontalOptions="Center"
            Text="{x:Static resources:CommonResources.LoadingText}" 
            VerticalOptions="Center" />
    </VerticalStackLayout>
</Frame>
</mopups:PopupPage>